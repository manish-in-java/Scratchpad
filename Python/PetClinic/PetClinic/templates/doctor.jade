extends layout

block styles
    link(rel='stylesheet', type='text/css', href='/static/styles/datatables.css')

block scripts
    script(src='/static/scripts/datatables.js')
    script(src='/static/scripts/doctor.js')

block content
    h1 #{title}

    .panel.panel-default
        .panel-body
            table(id="doctors")
                thead
                    tr
                        th First name
                        th Last name
    .panel.panel-default
        .panel-heading Add veterinarian
        .panel-body
            form.form-inline(method="POST")
                input.form-control(autofocus, id="firstName", placeholder="First name", required, type="text")
                input.form-control(id="lastName", placeholder="Last name", required, type="text")
                button.btn.btn-primary(accesskey="s", title="Alt+S") Save &crarr;
